extends layout

block content
  h1 Create New Category
  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type="text", placeholder='Enter Category Name' name='name' value=(undefined===category ? '' : category.name))
    div.form-group
      label(for='description') Description:
      input#description.form-control(type="text", placeholder='Enter Category Description' name='description' value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg